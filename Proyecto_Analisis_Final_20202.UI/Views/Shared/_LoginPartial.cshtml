@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul class="nav">


        @if (SignInManager.IsSignedIn(User))
        {
            @if (@User.IsInRole("Administrador"))
            {

                <li class="nav-item" style="margin-left: 20px">
                    <a title="Persona" href='/Administrador/ListarPersonas'>
                        <img src="~/Clientes.png" width="70" height="60" alt="Clientes" />
                    </a>

                </li>

                <ul class="nav nav-pills"  style="color: #FF0000 ">
                    <li class="dropdown" style="margin-left: 20px; color:black">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            <img src="~/Inventario.png" width="70" height="60" style="color:black" alt="Inventario" />
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" style=" background-color: rgba(0,0, 0, 0); border-radius: 28px 28px 28px 28px;                                    -moz-border-radius: 28px 28px 28px 28px;                                    -webkit-border-radius: 28px 28px 28px 28px;                                        border: 3px solid #ffffff;
                                    font-family:'Radley'; font-size:18px; width :250px ; height :auto ; font-weight:bold;" >
                            <li ><a style="color:black ; padding:10px" href="/Administrador/ListarInventario">Inventario Total</a></li>
                            <li><a style="color:black ; padding: 10px" href="/Administrador/ListarProductosDisponibles">Productos Disponibles</a></li>
                            <li><a style="color:black ; padding: 10px" href="/Administrador/ListarProductosSinExistencia"> Productos Sin Existencia</a></li>
                            <li><a style="color:black ; padding: 10px" href="/Administrador/ListarProductosFueraDeServicio">Productos Fuera de Servicio</a></li>
                        </ul>
                    </li>
                </ul>


            }
            else if (@User.IsInRole("Empleado"))
            {
                <li class="nav navbar-nav navbar-left" id="AlinearFactura">
                    <a title="Factura" href='/Usuario/VentanaPrincipal'>
                        <img src="~/Factura.png" width="70" height="60" alt="Factura" />
                    </a>
                </li>
                <li class="nav navbar-nav navbar-left" id="AlinearClientes">
                    <a title="Clientes" href='/Usuario/VentanaPrincipal'>
                        <img src="~/Clientes.png" width="70" height="60" alt="Clientes" />
                    </a>
                </li>
            }

            <li class="nav-item">
                <a style="color: black; font-family:'Radley'; margin-left: 10px; font-size: 20px; font-weight:bold" class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> Cuenta @User.Identity.Name</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("PortalPrincipal", "PantallaPrincipal", new { area = "" })">
                    <button style="color: black; font-family:'Radley'; margin-left: 10px; font-size: 20px; font-weight:bold" type="submit" class="nav-link btn btn-link ">Salir</button>
                </form>
            </li>
        }
        else
        {
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link" style="color:white; font-size: 20px; font-family:'Radley'" asp-area="" asp-controller="PortalPrincipal" asp-action="PantallaPrincipal">Servicios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color:white ; font-size: 20px; font-family:'Radley'" asp-area="" asp-controller="PortalPrincipal" asp-action="PantallaPrincipal">Contactenos</a>
                </li>
            </ul>
            <li class="nav-item">
                <a style="color: white; font-family:'Radley'; font-size: 20px; font-weight:normal" href='/Identity/Account/Login' class="btn btn-success"> Iniciar Sesión</a>
            </li>
        }

    </ul>
