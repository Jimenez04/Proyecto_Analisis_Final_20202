<div class="row">
    <div class="col-md-10">
        <table-container style="max-width: 100%; overflow-y: scroll;">
            <table class="table" >
                <thead>
                    <tr style=" font-family:'Radley' ; text-align:center; background-color: lightblue;  font-size:medium; color:black;">
                        <th>
                            @Html.DisplayNameFor(model => model.Codigo_Producto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cantidad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre_Articulo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Precio_Unidad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubTotal)
                        </th>
