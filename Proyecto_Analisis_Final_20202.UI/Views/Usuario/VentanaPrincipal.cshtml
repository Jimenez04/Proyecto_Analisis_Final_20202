                            @Html.DisplayNameFor(model => model.Impuesto_Producto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Total)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Codigo_Producto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre_Articulo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio_Unidad)
