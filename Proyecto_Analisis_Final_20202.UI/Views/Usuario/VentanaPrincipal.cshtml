                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Impuesto_Producto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </table-container>
      
