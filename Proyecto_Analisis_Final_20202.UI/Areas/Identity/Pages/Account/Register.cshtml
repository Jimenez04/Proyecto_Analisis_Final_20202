@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}
<link href="~/css/FondoPantalla.css" rel="stylesheet" />
<br>
<br>
<div class="row">

    <div class="col-5" id="VentanaRegistrar">
        <div class="panel panel-login" style="    border-radius: 22px;">
            <form id="account" method="post">
                <Center style=" font-family:'Radley'">
                    <h3>Nuevo Usuario</h3>
                </Center>
                <br>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col">
                    <div class="form-group" style=" font-family:'Radley'">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control"id="IconoInicio" placeholder="ejemplo04" />
                        <span asp-validation-for="Input.UserName" class="text-danger" id="text5"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group" style=" font-family:'Radley'">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" id="IconoInicio" placeholder="ejemplo04@gmail.com" />
                        <span asp-validation-for="Input.Email" class="text-danger" id="text6"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group" style=" font-family:'Radley' ">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" id="IconoInicio" />
                        <span asp-validation-for="Input.Password" class="text-danger" id="text7"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group" style=" font-family:'Radley' ">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control"id="IconoInicio"  />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger" id="text8"></span>
                    </div>
                </div>

                <img src="~/IconoLabelInicio.png" width="30" height="30" id="inicio" style="background:white" />
                <img src="~/Correo.png" width="30" height="30" id="correo" style="background:white" />
                <img src="~/Candado.png" width="26" height="26" id="candado1" style="background:white" />
                <img src="~/Candado.png" width="26" height="26" id="candado2" style="background:white" />


                <div class="col">
                    <center>
                        <button id="BotonCrear" type="submit" class="btn btn-success" style="font-family: 'Radley' ; width:200px; align-content:center">Crear</button>
                    </center>
                    <a id="BotonVolver" style="color: white; font-family:'Radley'; font-size: 15px; font-weight:normal" href='/PortalPrincipal/PantallaPrincipal' class="btn btn-success"> Volver</a>
                </div>
            </form>
        </div>

    </div>
    <div class="col-4">
        <center style=" font-family: 'Radley'">
            <img src="~/IconoPersonas.png" width="400" height="400" style="left: 500px;" />
        </center>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
