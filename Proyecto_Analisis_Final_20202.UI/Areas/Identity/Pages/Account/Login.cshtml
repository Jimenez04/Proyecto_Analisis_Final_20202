@page
@model LoginModel

@{ ViewData["Title"] = "InicioSesion";
}

<link href="~/css/FondoPantalla.css" rel="stylesheet" />
<hr />
<div class="row">
    <div class="col-md-4" id="ContenedorInicioSesion">
        <center style=" font-family:'Radley' ">
            <img src="~/IconoPersonas.png" width="200" height="200" />
            <h4>Iniciar sesión</h4>
        </center>
        <br />

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style=" font-family:'Radley' ">
                <input asp-for="Input.UserName" class="form-control" placeholder="Nombre de usuario" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-group" style=" font-family:'Radley' ">
                <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <a style="color: white; font-family:'Radley'; font-size: 15px; font-weight:normal" href='/PortalPrincipal/PantallaPrincipal' class="btn btn-primary"> Volver</a>
                    <button style="color: white; font-family:'Radley'; font-size: 15px; font-weight:normal;" type="submit" class="btn btn-success">Ingresar</button>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
